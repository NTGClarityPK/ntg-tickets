{
  "name": "@ntg/shared-library",
  "version": "1.0.0",
  "description": "Shared components, utilities, and services for NTG applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/backend/index.d.ts",
      "default": "./dist/backend/index.js"
    },
    "./frontend": {
      "types": "./dist/frontend/index.d.ts",
      "default": "./dist/frontend/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "react",
    "nestjs",
    "components",
    "utilities",
    "shared-library"
  ],
  "author": "NTG",
  "license": "MIT",
  "peerDependencies": {
    "@mantine/core": "^7.3.0",
    "@mantine/hooks": "^7.3.0",
    "@nestjs/common": "^10.2.10",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.2.10",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.2",
    "@tabler/icons-react": "^2.47.0",
    "axios": "^1.12.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "ioredis": "^5.3.2",
    "next": "^14.0.4",
    "next-intl": "^3.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "validator": "^13.11.0",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@tabler/icons-react": "^3.35.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.4",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/validator": "^13.11.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "express": "^4.18.2",
    "redis": "^5.8.3",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ntg/shared-library.git"
  }
}
